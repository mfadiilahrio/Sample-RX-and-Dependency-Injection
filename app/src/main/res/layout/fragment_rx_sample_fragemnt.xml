<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:padding="@dimen/padding_normal"
              android:orientation="vertical"
             tools:context="com.example.rxsample.ui.rxsample.rxsample_fragment.RxSampleFragment">

    <Button
            android:id="@+id/bt_form_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_form_validation"/>

    <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/padding_normal"/>

    <Button
            android:id="@+id/bt_api_validation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/label_api_validation"/>

    <FrameLayout
            android:id="@+id/fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"/>

</LinearLayout>
